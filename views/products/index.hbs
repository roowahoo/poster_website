{{#extends 'base'}}
{{#block 'content'}}

<table class='table'>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Cost</th>
            <th>Height</th>
            <th>Width</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        {{#each posters}}
        <tr>
            <td>{{this.id}}</td>
            <td>
                {{#if this.image_url}}
                <img class="img-thumbnail" src="{{this.image_url}}"/>
                {{/if}}
            </td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.height}}</td>
            <td>{{this.width}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.category.name}}</td>
            <td>
                {{#each this.tags}}
                <span class="badge badge-pill badge-primary">{{this.name}}</span>
                {{/each}}
            </td>
            <td>
                <a href="/shoppingCart/{{this.id}}/add" class="btn btn-primary btn-sm">Add to Cart</a>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}
{{/extends}}

